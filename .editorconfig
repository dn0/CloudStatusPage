# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4
max_line_length = 122

[*.py]
indent_style = space
indent_size = 4
max_line_length = 122

[*.{diff,md}]
trim_trailing_whitespace = false

[*.json]
insert_final_newline = false

[*.proto]
indent_size = 2
indent_style = space
